
<div class="col-xs-8 col-xs-offset-4">
  <h1><%= @book.title %></h1>
  <div class="col-xs-2">
    <img src="<%= @book.image %>" height="256px" alt="">
    <p><b>ISBN10:</b> <%= @book.isbn %></p>
  </div>
  <div class="col-xs-4">
    <p><%= @book.description.html_safe %></p>
  </div>
  <div class="col-xs-1">
    <p><h3><label class="label label-success">$<%= @book.price %>0</label></h3></p>
    <p><h3><label class="label label-warning"><%= @book.genre %></label></h3></p>
  </div>
  <div class="col-xs-7"></div>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-2">
      <hr>
      <h5><b>About the Author</b></h5>
      <p><%= @book.about.html_safe %></p>
    </div>
  </div>
</div>