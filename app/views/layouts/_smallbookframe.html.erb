<div class="col-xs-3">
  <label for="thumnail" class="label label-warning" style="padding:5px;"><%= object.genre %></label>
  <h3><label for="frame" class="label label-default" style="margin-right:3px;"><%= object.title %>
    </label><label for="frame" class="label label-success"><% if object.price.class != NilClass %>$<%= object.price %>0<%else %> $0.00 <%end%></label>
  </h3>
  <div class="col-xs-12">
    <div class="container">
      <%= link_to image_tag(object.image), book_path( object )%>
    </div>
    <% for i in 1..object.rating.to_i %>
      *
    <%end%>
    <p>ISBN: <%= object.isbn %></p>
  </div>
</div>

